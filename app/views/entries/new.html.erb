<h1>New entry</h1>

<%= error_messages_for :entry %>

<% form_for(@entry) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Schedule day</b><br />
    <%= f.date_select :schedule_day %>
  </p>

  <p>
    <b>Attend</b><br />
    <%= f.text_field :attend %>
  </p>

  <p>
    <b>Event</b><br />
    <%= f.text_field :event_id %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', entries_path %>
