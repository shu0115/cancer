<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Email</th>
  </tr>

<% unless @users.blank? %>
	<% @users.each{ |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.level %></td>
    <td><%=h user.email %></td>
    <td><%= link_to '閲覧', :action => "show", :id => user.id %></td>
    <td><%= link_to '編集', :action => "edit", :id => user.id %></td>
    <td><%= link_to '削除', { :action => "destroy", :id => user.id }, :confirm => "本当に削除してよろしいですか？" %></td>
  </tr>
	<% } %>
<% end %>
</table>

